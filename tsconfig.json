{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "typeRoots": ["./extended-types/global.d.ts", "./node_modules/@types"]
   },
   "include": ["src/**/*", ".env", "extended-types"],
   "exclude": ["node_modules"]
}